{
    "name": "wasabi/zf2-skeleton-application",
    "description": "Skeleton Application for ZF2 customized by wasabilib.org",
    "license": "BSD-3-Clause",
    "keywords": [
        "framework",
        "zf2"
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.phundament.com"
        },
        {
            "type": "package",
            "package": {
                "name": "wasabi/wasabilib",
                "version": "0.0.5",
                "minimum-stability": "dev",
                "source": {
                    "url": "https://github.com/WasabiLib/wasabilib.git",
                    "type": "git",
                    "reference": "master"
                }
            }
        },
      {
          "type": "package",
          "package": {
              "name": "wasabi/Mail",
              "version": "1.0",
              "minimum-stability": "dev",
              "source": {
                  "url": "https://github.com/WasabiLib/Mail.git",
                  "type": "git",
                  "reference": "master"
          }
        }
      }
    ],
    "homepage": "http://framework.zend.com/",
    "require": {
        "php": ">=5.3.3",
        "zendframework/zendframework": "2.5.*",
        "zendframework/zend-form": "2.5.*",
        "wasabi/wasabilib":">=0.0.5",
        "wasabi/mail":">=1.0"
    },
    "autoload": {
        "psr-0": {
            "ComposerScript\\Installer" : ""
        }
    },
    "scripts": {
        "post-install-cmd": [
            "ComposerScript\\Installer::postInstall"
        ],
        "post-update-cmd": [
            "ComposerScript\\Installer::postUpdate"
        ],
        "post-create-project-cmd": [
            "php -r \"echo 'post-create-project-cmd';\""
        ]
    }
}
